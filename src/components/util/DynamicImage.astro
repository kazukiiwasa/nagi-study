---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  imagePath: string;
  altText: string;
  width: number;
  height: number;
  class?: string;
}

const {
  imagePath,
  altText,
  width,
  height,
  class: className,
  ...rest
} = Astro.props;

const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/**/*.{svg,jpg,jpeg,png,webp}"
);

if (!images[imagePath])
  throw new Error(
    `"${imagePath}" does not exist in glob: "/src/assets/**/*.{svg,jpg,jpeg,png,webp}"`
  );
---

<Image
  src={images[imagePath]()}
  alt={altText}
  {width}
  {height}
  class={className}
  {...rest}
/>
