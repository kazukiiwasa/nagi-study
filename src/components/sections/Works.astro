---
import { Image } from "astro:assets";
import { getCollection } from "astro:content";

import Container from "@/components/layout/Container.astro";
import Section from "@/components/layout/Section.astro";
import LinkText from "@/components/ui/LinkText.astro";
import SectionTitle from "@/components/ui/SectionTitle.astro";
import categoryData from "@/config/category.json";

const allWorks = await getCollection("works");
const works = allWorks.sort((a, b) => b.data.year - a.data.year).slice(0, 4);
---

<Section background="primary">
  <Container>
    <div class="works-inner">
      <div class="works-header">
        <SectionTitle title="Works" subtitle="制作実績" />
        <LinkText href="/works/" ariaLabel="制作実績一覧">
          一覧を見る
        </LinkText>
      </div>

      <div class="works-grid">
        {
          works.map((work) => (
            <article class="work-item fade" data-animate>
              <a class="item-link" href={`/works/${work.id}`}>
                <div class="item-image">
                  <Image
                    src={work.data.image}
                    alt={work.data.title}
                    width={1600}
                    height={1068}
                  />
                  <span class="item-category">
                    {categoryData.work.find(
                      (cat) => cat.id === work.data.category
                    )?.title || work.data.category}
                  </span>
                </div>
                <div class="item-content">
                  <h3 class="item-title">{work.data.title}</h3>
                  <p class="item-client">{work.data.client}</p>
                  <p class="item-description">{work.data.description}</p>
                  <span class="item-view">詳細を見る</span>
                </div>
              </a>
            </article>
          ))
        }
      </div>
    </div>
  </Container>
</Section>

<style lang="scss">
  .works-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--sp-lg);
    margin-bottom: var(--sp-3xl);

    @media (min-width: 900px) {
      position: sticky;
      top: var(--sp-4xl);
      flex-direction: column;
      align-items: start;
      align-self: flex-start;
      flex-grow: 1;
      margin: 0;
      min-width: fit-content;
    }
  }

  .works-inner {
    @media (min-width: 900px) {
      display: grid;
      grid-template-columns: 20% 1fr;
      gap: 0 var(--sp-4xl);
    }
  }

  .works-grid {
    display: grid;
    gap: var(--sp-3xl);

    @media (min-width: 600px) {
      gap: var(--sp-5xl);
    }
  }

  .work-item {
  }

  .item-link {
    transition: transform var(--transition-slow);

    &:hover {
      transform: translateY(-4px);
    }
  }

  .item-image {
    position: relative;
    width: 100%;
    overflow: hidden;
    border-radius: var(--radius-xl);

    img {
      width: 100%;
      height: auto;
      object-fit: cover;
      aspect-ratio: 16 / 10;
      transition: transform var(--transition-slower);
    }

    .work-item:hover & img {
      transform: scale(1.05);
    }
  }

  .item-category {
    position: absolute;
    top: var(--sp-md);
    left: var(--sp-md);
    padding: var(--sp-xs) var(--sp-md);
    background-color: rgba(255, 255, 255, 0.7);
    color: var(--c-text);
    font-size: var(--fs-xs);
    font-weight: 500;
    line-height: var(--lh-tight);
    text-transform: uppercase;
    letter-spacing: 0.02em;
    border-radius: var(--radius-full);
  }

  .item-content {
    display: flex;
    flex-direction: column;
    gap: var(--sp-sm);
    margin: var(--sp-lg) 0 0;

    @media (min-width: 900px) {
      margin: var(--sp-lg) 0 0;
    }
  }

  .item-title {
    color: var(--c-text);
    font-size: var(--fs-lg);
    font-weight: 500;
    line-height: var(--lh-snug);

    @media (min-width: 900px) {
      font-size: var(--fs-xl);
    }
  }

  .item-client {
    color: var(--c-text-sub);
    font-size: var(--fs-sm);
    line-height: var(--lh-snug);
  }

  .item-description {
    color: var(--c-text-sub);
    font-size: var(--fs-md);
    line-height: var(--lh-loose);

    @media (min-width: 900px) {
      font-size: var(--fs-base);
    }
  }

  .item-view {
    align-self: flex-start;
    display: inline-block;
    width: var(--buttonWidth);
    margin: var(--sp-md) 0 0;
    padding: var(--sp-sm) var(--sp-lg);
    border: 1px solid var(--c-border);
    border-radius: var(--radius-full);
    background-image: linear-gradient(
      to right,
      var(--c-primary) 50%,
      transparent 50%
    );
    background-size: 200% 100%;
    background-position: right;
    color: var(--c-text);
    font-size: var(--fs-sm);
    font-weight: 400;
    line-height: 1.6;
    text-align: center;
    transition:
      background-position var(--transition-slow),
      color var(--transition-slow),
      border-color var(--transition-slow);

    .work-item:hover & {
      background-position: left;
      color: var(--c-text-inverse);
      border-color: var(--c-primary);
    }
  }
</style>
